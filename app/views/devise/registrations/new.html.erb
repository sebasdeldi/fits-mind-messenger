



<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>


    <div class="ui inverted segment">
    <h2>Sign up</h2>

    <div class="ui inverted form">
      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, placeholder: "Email", type: "text" %>
      </div>
      <div class="field">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "off" , placeholder: "Password"%>
      </div>
      <div class="field">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password, autocomplete: "off" , placeholder: "Password Confirmation"%>
      </div>
      <div class="field">
        <%= f.label :role %>
        <%= f.select :role, ["User", "Trainer"]%>
      </div>
      <br>
      <p><%= f.submit "Sign up", class: "ui submit button" %>  <%= render "devise/shared/links" %></p>

    </div>
  </div>

<% end %>
